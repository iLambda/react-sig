{
  "name": "react-sig",
  "version": "0.1.0",
  "description": "A react hook used to send signals between parent and child.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "react",
    "signal",
    "event",
    "hook"
  ],
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "yarn build",
    "build": "tsc --outDir ./dist",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "docs": "rimraf ./docs/ && typedoc",
    "readme": "concat-md --dir-name-as-title --decrease-title-levels docs --ignore README.md modules.md > README.raw.md"
  },
  "author": "iLambda <me@ilambda.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/eslint": "^8.44.0",
    "@types/react": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "concat-md": "^0.5.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unused-imports": "^3.0.0",
    "rimraf": "^5.0.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "react": "^16.8.0"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
